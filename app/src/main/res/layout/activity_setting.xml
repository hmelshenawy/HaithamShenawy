<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SettingActivity">

    <de.hdodenhof.circleimageview.CircleImageView xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/profile_image"
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:onClick="select_ProfilePhoto"
        android:src="@drawable/ic_account_circle_black_24dp"
        app:civ_border_color="#ffffff"
        app:civ_border_width="2dp" />

    <EditText

        android:id="@+id/ed_status"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/profile_image"
        android:layout_marginTop="15dp"
        android:gravity="center"
        android:text="Welcome to my profile" />

    <EditText
        android:id="@+id/ed_SetuserName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ed_status"
        android:layout_marginTop="15dp"
        android:gravity="center"
        android:hint="Enter your user name here" />

    <Button
        android:id="@+id/btn_updateProfile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ed_SetuserName"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:text="Update profile"
        android:textAllCaps="false" />
</RelativeLayout>